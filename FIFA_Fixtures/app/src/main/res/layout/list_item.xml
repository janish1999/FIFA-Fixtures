<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginRight="0dp"
        android:layout_marginTop="30dp"
        android:layout_toEndOf="@+id/icon1click"
        android:text="17:30"
        android:textSize="15sp"
        android:textStyle="normal" />

    <ImageView
        android:id="@+id/icon1click"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/icon2"
        android:layout_marginStart="112dp"
        android:visibility="visible"
        app:srcCompat="@mipmap/ic_launcher" />

    <ImageView
        android:id="@+id/icon2"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignTop="@+id/time"
        android:layout_marginTop="-10dp"
        android:layout_toEndOf="@+id/time"
        app:srcCompat="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/country1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/time"
        android:layout_marginEnd="-102dp"
        android:layout_toStartOf="@+id/icon1click"
        android:text="germany"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/country2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/time"
        android:layout_marginLeft="12dp"
        android:layout_toEndOf="@+id/icon2"
        android:text="costa rica"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/icon1click"
        android:layout_centerHorizontal="true"
        android:text="11/10/18"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/venue"
        android:layout_width="126dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/date"
        android:layout_below="@+id/date"
        android:text="munich"
        android:textSize="15sp" />
</RelativeLayout>