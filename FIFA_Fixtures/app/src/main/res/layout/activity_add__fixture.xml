<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Add_Fixture">

    <EditText
        android:id="@+id/country1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="37dp"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:hint="Team 1"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/country2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/country1"
        android:layout_below="@+id/country1"
        android:ems="10"
        android:hint="Team 2"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/country1"
        android:layout_below="@+id/country2"
        android:ems="10"
        android:hint="Time"
        android:inputType="time" />

    <EditText
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/country1"
        android:layout_below="@+id/time"
        android:ems="10"
        android:hint="Date"
        android:inputType="date" />

    <EditText
        android:id="@+id/venue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/country1"
        android:layout_below="@+id/date"
        android:ems="10"
        android:hint="Venue"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/icon1click"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/country1"
        android:layout_marginBottom="109dp"
        android:text="Set Icon 1" />

    <Button
        android:id="@+id/icon2click"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/icon1click"
        android:layout_marginEnd="55dp"
        android:text="Set Icon 2" />

    <ImageView
        android:id="@+id/icon1"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/country1"
        android:layout_marginBottom="168dp"
        android:src="@mipmap/ic_launcher_round" />

    <ImageView
        android:id="@+id/icon2"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignTop="@+id/icon1"
        android:layout_toEndOf="@+id/country1"
        android:src="@mipmap/ic_launcher" />

    <Button
        android:id="@+id/add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="24dp"
        android:layout_toEndOf="@+id/icon1click"
        android:text="Add" />
</RelativeLayout>